{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "strict": true,
    "outDir": "lib",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "src",
  },
  "exclude": [
    "lib",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}